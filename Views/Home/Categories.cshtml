@model PaginatedList<Marfia_HairTonic.Models.Category>

<div class="container-fluid py-5">
    <div class="container">
        <div class="mx-auto text-center wow fadeIn" data-wow-delay="0.1s" style="max-width: 600px;">
            <h1 class="text-primary mb-3"><span class="fw-light text-dark">Our Natural</span> Hair Products</h1>
            <p class="mb-5">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis aliquet, erat non malesuada consequat, nibh erat tempus risus.</p>
            <form asp-action="Categories" method="get">
                <p>
                    Search: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
                    <input type="submit" value="Search" />
                </p>
            </form>
        </div>
        <br />
        <div class="row g-4">
            @for (int i = 0; i < Model.Count; i += 3)
            {
                <div class="row">
                    @for (int j = i; j < i + 3 && j < Model.Count; j++)
                    {
                        <div class="col-md-4">
                            <div class="product-item text-center border h-100 p-4">
                                <h1>@Model[j].CategoryName</h1>
                                <p>@Model[j].Description</p>
                                <a href="" class="btn btn-outline-primary px-3">View All</a>
                            </div>
                        </div>
                    }
                </div>
                <br />
                <br />
            }
        </div>
        <br/>
        <!-- Pagination Control -->
        <div class="d-flex justify-content-center">
            @if (Model.HasPreviousPage)
            {
                <a asp-action="Categories" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-searchString="@ViewData["CurrentFilter"]" class="btn btn-primary mx-1">Previous</a>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <a asp-action="Categories" asp-route-pageNumber="@i" asp-route-searchString="@ViewData["CurrentFilter"]" class="btn btn-primary mx-1">@i</a>
            }

            @if (Model.HasNextPage)
            {
                <a asp-action="Categories" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-searchString="@ViewData["CurrentFilter"]" class="btn btn-primary mx-1">Next</a>
            }
        </div>
    </div>
</div>
